<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/actions_padding"
    android:gravity="right"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/ic1"
        android:scaleType="fitCenter"
        android:src="@drawable/smile"
        android:background="?android:selectableItemBackground"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic3"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/like"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic4"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/share"
        style="@style/card.native.actions.button"
        android:layout_marginRight="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic5"
        style="@style/card.native.expand_simple_title"
        android:text="expand" />
</LinearLayout>